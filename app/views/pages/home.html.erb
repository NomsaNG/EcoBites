<div class="container">
  <h1>Welcome to EcoBites</h1>


  <% if user_signed_in? %>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger", style: "float: right; margin-right: 10px;" %>
      <%= link_to "List an offer", new_offer_path, class: "btn btn-primary m-2" %>
  <% else %>
    <div class="button">
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary m-2" %>
      <%= link_to "Sign in", new_user_session_path, class: "btn btn-secondary m-2" %>
    </div>
  <% end %>

  <div class="button">
    <%= link_to "Go to Map", map_path, class: "btn btn-secondary m-2" %>
  </div>


  <h2>Hot deals <i class="fas fa-fire"></i></h2>
  <div id="carouselExampleControls1" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @offers.each_with_index do |offer, index| %>
        <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
          <div class="card">
            <div class="wrapper">
              <%= image_tag(offer.photo.url, class: 'card-img-top', alt: 'Card image cap') if offer.photo.attached? %>
            </div>
            <div class="card-body">
              <div>
                <h5 class="card-title"><%= offer.title %></h5>
                <p class="card-text">Price: <%= number_to_currency(offer.unit_price) %></p>
              </div>
              <%= link_to "Get this deal", offer_path(offer), class: "btn btn-primary m-2" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls1" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls1" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>


  <div class="see-offers-button">
      <%= button_to "See all offers", offers_path, class: "btn btn-success m-2" %>
  </div>
</div>
