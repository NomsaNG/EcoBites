<div class="container-fluid">
  <div class="row mt-0">
    <div class="col-6">

      <h2 class="mt-4">Hot deals <i class="fas fa-fire"></i></h2>
      <div id="carouselExampleControls1" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @offers.each_with_index do |offer, index| %>
            <% if offer.hotdeals == true %>
              <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
                <div class="card">
                  <div class="wrapper">
                    <%= image_tag(offer.photo.url, class: 'card-img-top', alt: 'Card image cap') if offer.photo.attached? %>
                  </div>
                    <div class="d-flex justify-evenly align-items-center">
                      <div class="card-body mx-2">
                        <h5 class="card-title"><strong><%= offer.shop %></strong></h5>
                          <h5 class="card-title"><%= offer.title %></h5>
                          <p class="card-text ">Price: <%= number_to_currency(offer.unit_price) %></p>
                      </div>
                      <%= link_to "View", offer_path(offer), class: "bttn btn-primary m-2" %>
                    </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls1" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls1" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>

      </div>
      <div class="row">
        <div class="grid-container col-6 p-0">
              <% @offers.each_with_index do |offer, index| %>
                <% if offer.hotdeals == false %>
                  <div class="card">
                    <div class="wrapper">
                      <%= image_tag(offer.photo.url, class: 'card-img-top', alt: 'Card image cap') if offer.photo.attached? %>
                    </div>
                    <div class="d-flex justify-evenly align-items-center">
                    <div class="card-body mx-2">
                      <h5 class="card-title"><strong><%= offer.shop %></strong></h5>
                        <h5 class="card-title"><%= offer.title %></h5>
                        <p class="card-text ">Price: <%= number_to_currency(offer.unit_price) %></p>
                    </div>
                      <%= link_to "View", offer_path(offer), class: "bttn btn-primary m-2" %>
                    </div>
                  </div>
                <% end %>
              <% end %>
        </div>
      </div>
    </div>


    <div class="map-container col-5">
      <div class="map">
        <%= render "pages/map" %>
      </div>
    </div>
  </div>


</div>
