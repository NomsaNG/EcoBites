<%#= render 'app/views/offers/_details.html.erb', offer: @offer %>


<section class="container" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); padding: 10px; margin-top: 5px; border-radius: 5px; background-color: #F9F9F9;">
  <div class="row">
    <div class="col-md-6 col-lg-4">
      <div class="card">
        <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Offer image for <%= offer.title %>" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title"><%= offer.title %></h5>
          <p class="card-text"><%= offer.description %></p>
          <p class="card-text">Address: <%= offer.user.address %></p>
          <p class="card-text">Price: <%= offer.unit_price %></p>
          <form>
            <div class="form-group">
              <label for="quantity">Quantity:</label>
              <input type="number" id="quantity" name="quantity" class="form-control" min="1" max="10" value="1">
            </div>
            <p><strong>Pick up time starts at <%= offer.pickup_time_start.strftime('%H:%M') %></strong></p>
            <button type="submit" class="btn btn-primary btn-block mt-3">Confirm</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
